<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:endColor="@color/grey2"
                android:startColor="@color/grey1"
                android:angle="270" />
            <stroke
            	android:color="@color/black"            	
                android:width="1dp" />              
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <margin
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:endColor="@color/grey3"
                android:startColor="@color/grey3"
                android:angle="270" />
            <stroke
            	android:color="@color/black"            	
                android:width="1dp" />              
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:endColor="@color/grey1"
                android:startColor="@color/grey2"
                android:angle="270" />
            <stroke
            	android:color="@color/black"            	
                android:width="1dp" />              
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape> 
            <gradient
                android:endColor="@color/grey1"
                android:startColor="@color/grey2"
                android:angle="270" />
            <stroke
            	android:color="@color/black"            	
                android:width="1dp" />              
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>